<Groups version='3.0'>

  <!--Pantheon on Rackspace/Linode-->
  <Group profile='true' public='true' default='true' name='pantheon-vps'>
    <Group name='pantheon'/>
    <Group name='vps'/>
  </Group>

  <!--Pantheon on AWS-->
  <Group profile='true' public='true' name='pantheon-aws'>
    <Group name='pantheon'/>
    <Group name='amazon-web-services'/>
  </Group>
  
  <!--Pantheon on AWS w/ EBS boot-->
  <Group profile='true' public='true' name='pantheon-aws-ebs'>
    <Group name='pantheon'/>
    <Group name='amazon-web-services-ebs'/>
  </Group>
  
  <!-- Operating systems -->
  <Group name='jaunty'> 
    <Bundle name='ubuntu-jaunty'/>
  </Group>
  <Group name='karmic'> 
    <Bundle name='ubuntu-karmic'/>
  </Group>
  <Group name='lucid'>
    <Bundle name='ubuntu-lucid'/>
  </Group>
  <Group name='centos5'>
    <Bundle name='centos5'/>
  </Group>
  <Group name='debian'>
    <Bundle name='debian-lenny'/>
  </Group>

  <!-- pantheon server types -->
  <Group name='pantheon'>
    <Bundle name='bcfg2'/>
    <Bundle name='apache2'/>
    <Bundle name='php'/>
    <Bundle name='memcached'/>
    <Bundle name='tools'/>
    <Bundle name='pantheon'/>
    <Bundle name='mysql-packages'/>
    <Bundle name='mysql-services'/>
    <Bundle name='postfix'/>
    <Bundle name='tomcat'/>
    <Bundle name='varnish'/>
    <Group name='hudson'/>
  </Group>
  
  <!-- hosting providers -->
  <Group name='vps'>
    <Bundle name='vps'/>
  </Group>
  <Group name='amazon-web-services'>
    <Bundle name='amazon-web-services-packages'/>
    <Bundle name='amazon-web-services-files'/>
  </Group>  
  <Group name='amazon-web-services-ebs'>
    <Bundle name='amazon-web-services-packages'/>
  </Group>  

  <!-- Hudson -->
  <Group name='hudson'>
    <Bundle name='hudson-package'/>
    <Bundle name='hudson-service'/>
    <Bundle name='hudson-jobs'/>
  </Group>
  
</Groups>
