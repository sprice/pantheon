<Bundle name='php'>

  <!-- Ubuntu Only -->
  <Group name='ubuntu'>
    <Package name='libdb4.7'/>
  </Group>

  <!-- Debian Only -->
  <Group name='debian'>
    <Package name='gcc-4.2-base'/>
  </Group>

  <!-- Ubuntu/Deb Only -->
  <Group name='deb'>
    <Package name='autoconf2.13'/>
    <Package name='automake1.4'/>
    <Package name='php5'/>
    <Package name='php5-cli'/>
    <Package name='php5-curl'/>
    <Package name='php5-dev'/>
    <Package name='php5-gd'/>
    <Package name='php5-imagick'/>
    <Package name='php5-mysql'/>
    <Package name='php-pear'/>
    <Package name='php5-xmlrpc'/>
    <Package name='php-apc'/>
    <Path name='/etc/php5/apache2/php.ini' altsrc='/php5/apache2/php.ini'/>
    <Path name='/etc/php5/cli/php.ini' altsrc='/php5/cli/php.ini'/>
    <Path name='/etc/php5/conf.d/apc.ini' altsrc='/php5/apc/apc.ini'/>
  </Group>

  <!-- CentOS Only -->
  <Group name='centos'>
    <Package name='php52'/>
    <Package name='php52-common'/>
    <Package name='php52-cli'/>
    <Package name='php52-devel'/>
    <Package name='php52-gd'/>
    <Package name='php52-mbstring'/>
    <Package name='php52-pear'/>
    <Package name='php52-pecl-apc'/>
    <Path name='/etc/php.ini' altsrc='/php5/apache2/php.ini'/>
    <Path name='/etc/php.d/apc.ini' altsrc='/php5/apc/apc.ini'/>
  </Group>
</Bundle>

