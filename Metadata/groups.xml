<Groups version='3.0'>
  <!--
      Select the Bundles you wish to use in the group profile
      We've provided several examples - only use one group profile
      Note that the ubuntu-karmic option hasn't been tested as thoroughly as the ubuntu-jaunty option
    -->

  <!--Ubuntu Jaunty 32-bit on AWS (DEFAULT)-->
  <Group profile='true' public='true' default='true' name='mercury-ubuntu-jaunty-aws-32'>
    <Group name='mercury'/>
    <Group name='ubuntu-jaunty'/>
    <Group name='amazon-web-services'/>
    <Group name='i386'/>
    <Group name='bcfg2'/>
  </Group>
  
  <!--Ubuntu Jaunty 64-bit on AWS-->
