<Bundle name='bcfg2'>
  
  <Package name='bcfg2'/>
  <Package name='bcfg2-server'/>
  <Package name='gamin'/>
  <Package name='python-genshi'/>
  <Package name='python-lxml'/>
  <Service name='bcfg2'/>
  <Service name='bcfg2-server'/>
  
  <!-- Ubuntu/Debian Only -->
  <Group name='deb'>
    <Package name='python-gamin'/>
  </Group>
  
  <!-- CentOS Only -->
  <Group name='centos'>
    <Package name='gamin-python'/>
    <Package name='libxslt'/>
    <Package name='python-crypto'/>
    <Package name='python-paramiko'/>
    <Package name='python-pycurl'/>
    <Package name='python-ssl'/>
  </Group>
  
</Bundle>

