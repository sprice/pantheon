<Bundle name='hudson-jobs'>

  <!-- Ubuntu/Debian Only -->
  <Group name='deb'>
    <BoundPath type='directory' name='/var/lib/hudson/jobs' owner='hudson' group='root' perms='0755'/>

    <BoundPath type='directory' name='/var/lib/hudson/jobs/mercury_init' owner='hudson' group='root' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs/mercury_cron' owner='hudson' group='root' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs/import_site' owner='hudson' group='root' perms='0755'/>
  </Group>
  
  
  <!-- Centos Only -->
  <Group name='centos'>
    <BoundPath type='directory' name='/var/lib/hudson/jobs' owner='hudson' group='hudson' perms='0755'/>

    <BoundPath type='directory' name='/var/lib/hudson/jobs/mercury_init' owner='hudson' group='hudson' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs/mercury_cron' owner='hudson' group='hudson' perms='0755'/>
    <BoundPath type='directory' name='/var/lib/hudson/jobs/import_site' owner='hudson' group='hudson' perms='0755'/>
  </Group>    
  
  <!-- Jobs -->
  <Path name='/var/lib/hudson/jobs/import_site/config.xml' altsrc='/hudson/jobs/import_site/config.xml'/>
  <Path name='/var/lib/hudson/jobs/mercury_init/config.xml' altsrc='/hudson/jobs/mercury_init/config.xml'/>
  <Path name='/var/lib/hudson/jobs/mercury_cron/config.xml' altsrc='/hudson/jobs/mercury_cron/config.xml'/>
  
</Bundle>
